{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "CatalogsModule": {
    "CaptionFileName": "caption.txt",
    "TitleFileName": "title.txt",
    "SubTitleFileName": "subtitle.txt",
    "SubImageFileExtName": ".jpg",
    "SubImageMIME": "image/jpeg",
    "ResolveWorkdirTimeInterval": 600,
    "SubImageStyles": [
      {
        "Name": "thumbnail",
        "Path": "_thumbnail",
        "MaxWidth": 500,
        "MaxHeight": 500
      },
      {
        "Name": "small",
        "Path": "_small",
        "MaxWidth": 750,
        "MaxHeight": 750
      },
      {
        "Name": "medium",
        "Path": "_medium",
        "MaxWidth": 1000,
        "MaxHeight": 1000
      },
      {
        "Name": "large",
        "Path": "_large",
        "MaxWidth": 2000,
        "MaxHeight": 2000
      }
    ]
  }
}
